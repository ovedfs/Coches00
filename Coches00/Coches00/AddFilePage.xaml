<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coches00.AddFilePage"
             Title="Nuevo archivo">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Entry x:Name="entryTitulo" Placeholder="Título..."/>
            <Entry x:Name="entryDescripcion" Placeholder="Descripción..."/>
            <Entry x:Name="entryNota" Placeholder="Nota..."/>

            <StackLayout Orientation="Horizontal">
                <Button x:Name="ChoiceFoto" Text="Elige foto de documento..." 
                        Clicked="ChoiceFoto_Clicked" 
                        HorizontalOptions="Start"/>
                <Image x:Name="foto" WidthRequest="80" HorizontalOptions="EndAndExpand"/>
            </StackLayout>

            <StackLayout Margin="0,30" Orientation="Horizontal" HorizontalOptions="Center">
                <Button x:Name="SaveButton" Text="Guardar"
                        Clicked="SaveButton_Clicked"
                        BackgroundColor="OrangeRed"
                        TextColor="White"/>
                <Button x:Name="CancelButton" Text="Cancelar"
                        Clicked="CancelButton_Clicked"
                        BackgroundColor="Gray"
                        TextColor="White"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>