<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coches00.RegisterPage"
             Title="Registro">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Entry x:Name="entryName" Placeholder="Nombre..."/>
            <Entry x:Name="entryEmail" Placeholder="Correo..." Keyboard="Email"/>
            <Entry x:Name="entryPassword" Placeholder="Password" IsPassword="True"/>
            <Entry x:Name="entryConfirmPassword" Placeholder="Confirma tu password" IsPassword="True"/>
            <StackLayout Margin="0,30" Orientation="Horizontal" HorizontalOptions="Center">
                <Button x:Name="RegisterButton" Text="Registrar" 
                        Clicked="RegisterButton_Clicked"
                        BackgroundColor="OrangeRed"
                        TextColor="White"/>
                <Button x:Name="CancelButton" Text="Cancelar" 
                        Clicked="CancelButton_Clicked"
                        BackgroundColor="Gray"
                        TextColor="White"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>